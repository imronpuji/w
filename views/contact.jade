extends layout

block content
  div
    form(action='/kontak',method='post')
      div(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='username') Nama
             input(id='username',type='text',value='',name='username')
      div(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='sapaan') Sapaan
             input(id='sapaan',type='text',value='',name='called')
      div#passworddiv(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='wa_number') Nomor WA
             input(id='wa_number',type='text',value='',name='wa_number')
      div(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='address') Alamat
             input(id='address',type='text',value='',name='address')
      div(data-role='fieldcontain')   
        input(type='submit',value='Buat Kontak',data-transition='fade', data-theme='c')

  div
      br
      br
      if contacts
        each contact in contacts
          form(action="/kontak/delete", method='post')
            h1 #{contact.nama} - #{contact.alamat} - #{contact.nomor} - #{contact.date} - #{contact.status == true ? 'sudah terverifikasi' : 'tidak aktif'}
            input(type='hidden',value='#{contact.id}',name='id')
            input(type='hidden',value='#{contact.rev}',name='_rev')

            input(type='submit',value='Hapus Kontak',data-transition='fade', data-theme='c')
            br
            br
