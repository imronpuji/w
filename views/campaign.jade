extends layout

block content
  div(class="container-fluid")
    form(action='/campaign',method='post')
      input(type='hidden',value="#{groups[0]['id']}", name='groups')
    
      label(for='Hari') Hari
         select(id="xxx", name="type")
          option(value="days") Hari
          option(value="hour") Jam
          option(value="minutes") Menit
      label(for='value') Nilai
        input(id='value',type='text',value='',name='value')
      label(for='message') Pesan
        input(id='messages',type='text',value='',name='messages')
      button(class="btn btn-primary", type='submit') Buat Kampanye

    div(class="container-fluid")
      if campaigns
        table(class="table table-striped table-light table-bordered")
          thead
            tr
              th(scope="col") Nilai
              th(scope="col") Waktu
              th(scope="col") Pesan
              th(scope="col") Aksi
          tbody
            each campaign in campaigns
              tr
                td #{campaign.nilai}
                td #{campaign.tipe}
                td #{campaign.pesan}
                td 
                  a(class="btn btn-primary", href="/campaign/content/delete/#{campaign.k_id}") Hapus


