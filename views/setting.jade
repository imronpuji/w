extends layout

block content
  div
    if owner != null
      if owner.status == 1
        h1 Aktif
      if owner.status == 0
        h1 Off

  if owner != null
      form(action='/setting/edit',method='post')
        div(data-role='fieldcontain')
          fieldset(data-role='controlgroup')
            label(for='username') Pemilik
               input(id='username',type='text', disabled,value='#{owner.nama}',name='username')
        div#passworddiv(data-role='fieldcontain')
          fieldset(data-role='controlgroup')
            label(for='wa_number') Nomor WA
               input(id='wa_number',type='text', disabled, value='#{owner.nomor}',name='wa_number')
               input(id='wa_number',type='hidden',value='#{owner.id}',name='id')
        div#passworddiv(data-role='fieldcontain')
          fieldset(data-role='controlgroup')
            label(for='subscribe') SUBSCRIBE
               input(id='subscribe',type='text',value='#{owner.subscribe}',name='subscribe')
        div#passworddiv(data-role='fieldcontain')
          fieldset(data-role='controlgroup')
            label(for='unsubscribe') UNSUBSCRIBE
               input(id='unsubscribe',type='text',value='#{owner.unsubscribe}',name='unsubscribe')
        button(type="submit") Setting

  if owner == null
      h1  Barcode 
      img(src="/wa/qr")




